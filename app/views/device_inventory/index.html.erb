
<h2><%= link_to @node_name, inventory_path(@node_name) %></h2>

<table class="list issues sort-by-id sort-desc">

  <thead>
    <tr>
      <% @headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @tables.each do |row| %>
      <tr>
        <% @headers.each do |header| %>
          <td class="name"><%= row[header] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
